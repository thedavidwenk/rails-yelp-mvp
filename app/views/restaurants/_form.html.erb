<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, :placeholder => 'Your restaurant name' %>
    <%= f.input :address, :placeholder => 'Your restaurant address' %>
    <%= f.input :category, collection: ['Chinese', 'Italian', 'Japanese', 'French', 'Belgian'], include_blank: 'Select a food category', input_html: { class: 'form-select', aria: { label: 'Default select example' } } %>
    <%= f.input :phone_number, as: :tel, label: 'Phone Number', input_html: { class: 'form-control', placeholder: 'Enter phone number' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>
