<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-input">
    <%= f.input :rating, collection: 1..5, prompt: 'Select a rating' %>
    <%= f.label :content %>
    <%= f.text_area :content, rows: 5 %>
  </div>

    <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>